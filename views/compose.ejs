<%- include("particles/header") -%>


    <div class="com-blog">
        <h1>Compose Your Blog Here.</h1>
        <div class="cInput">
            <form action="/blogs/compose" method="POST"> 
                <input type="text" name="cName" placeholder="Full Name" autocomplete="off" required><br>
                <input type="text" name="cTitle" placeholder="Blog Title" autocomplete="off" required><br>
                <textarea name="cDesc" placeholder="Blog Description" autocomplete="off" required></textarea><br>
                <button type="submit" class="my-btn sub-btn">Add Blog</button>
            </form> 
        </div>    

    </div>
    
    <%- include("particles/footer") -%>

</body>